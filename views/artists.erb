<h1>All Sales Vinyl</h1>

<h3>Available Artists</h3>

<% if @artists.any? %>
  <ul>
    <% @artists.each do |artist| %>
      <li><a href="/artists/<%= artist.id %>"><%= artist.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no artists to display.</p>
<% end %>

<form action="/artists">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text" required>
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<a href="/artists/new">Add a New Artist</a>
